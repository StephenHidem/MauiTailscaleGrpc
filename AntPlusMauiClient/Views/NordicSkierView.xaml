<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ant="clr-namespace:SmallEarthTech.AntPlus.DeviceProfiles.FitnessEquipment;assembly=SmallEarthTech.AntPlus"
             x:DataType="ant:NordicSkier"
             x:Class="AntPlusMauiClient.Views.NordicSkierView">
    <VerticalStackLayout>
        <Label Text="Nordic Skier" Style="{StaticResource HeaderLabelStyle}"/>
        <StackLayout Margin="8, 0, 0, 0">
            <Label Text="{Binding Cadence, StringFormat='Cadence: {0}'}"/>
            <Label Text="{Binding InstantaneousPower, StringFormat='Instantaneous Power: {0}'}"/>
            <Label Text="{Binding StrideCount, StringFormat='Stride Count: {0}'}"/>
            <Label Text="{Binding Capabilities, StringFormat='Capabilities: {0}'}"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentView>
