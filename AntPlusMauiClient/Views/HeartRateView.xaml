<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AntPlusMauiClient.ViewModels"
             xmlns:views="clr-namespace:AntPlusMauiClient.Views"
             xmlns:tabview="clr-namespace:Syncfusion.Maui.Toolkit.TabView;assembly=Syncfusion.Maui.Toolkit"
             xmlns:ant="clr-namespace:SmallEarthTech.AntPlus;assembly=SmallEarthTech.AntPlus"
             x:DataType="vm:HeartRateViewModel"
             x:Class="AntPlusMauiClient.Views.HeartRateView">
    <tabview:SfTabView>
        <tabview:SfTabView.Items>
            <tabview:SfTabItem Header="Heart Rate Monitor">
                <tabview:SfTabItem.Content>
                    <StackLayout>
                        <Border>
                            <StackLayout>
                                <Label Text="Heart Rate" FontAttributes="Bold" TextDecorations="Underline"/>
                                <Label Text="{Binding HeartRate.HeartRateData.ComputedHeartRate, StringFormat='Heart Rate: {0}'}"/>
                                <Label Text="{Binding HeartRate.HeartRateData.RRInterval, StringFormat='RR Interval: {0}'}"/>
                                <Label Text="{Binding HeartRate.HeartRateData.AccumulatedHeartBeatEventTime, StringFormat='Accumulated Heartbeat Event Time: {0}'}"/>
                                <Label Text="{Binding HeartRate.CumulativeOperatingTime, StringFormat='Cumulative Operating Time: {0}'}"/>
                                <Label Text="{Binding HeartRate.EventType, StringFormat='Heartbeat Event Type: {0}'}"/>
                            </StackLayout>
                        </Border>
                        <Border>
                            <StackLayout>
                                <Label Text="Manufacturer Info" FontAttributes="Bold" TextDecorations="Underline"/>
                                <Label Text="{Binding HeartRate.ManufacturerInfo.ManufacturingIdLsb, StringFormat='Man ID LSB: {0}'}"/>
                                <Label Text="{Binding HeartRate.ManufacturerInfo.SerialNumber, StringFormat='Serial Number: {0}'}"/>
                            </StackLayout>
                        </Border>
                        <Border>
                            <StackLayout>
                                <Label Text="Product Info" FontAttributes="Bold" TextDecorations="Underline"/>
                                <Label Text="{Binding HeartRate.ProductInfo.HardwareVersion, StringFormat='Hardware Version: {0}'}"/>
                                <Label Text="{Binding HeartRate.ProductInfo.SoftwareVersion, StringFormat='Software Version: {0}'}"/>
                                <Label Text="{Binding HeartRate.ProductInfo.ModelNumber, StringFormat='Model Number: {0}'}"/>
                            </StackLayout>
                        </Border>
                        <Border>
                            <StackLayout>
                                <Label Text="Battery Status" FontAttributes="Bold" TextDecorations="Underline"/>
                                <Label Text="{Binding HeartRate.BatteryStatus.BatteryLevel, StringFormat='Battery Level: {0}'}"/>
                                <Label Text="{Binding HeartRate.BatteryStatus.BatteryStatus, StringFormat='Battery Status: {0}'}"/>
                                <Label Text="{Binding HeartRate.BatteryStatus.BatteryVoltage, StringFormat='Battery Voltage: {0:F1}'}"/>
                            </StackLayout>
                        </Border>
                    </StackLayout>
                </tabview:SfTabItem.Content>
            </tabview:SfTabItem>
            <tabview:SfTabItem Header="Capabilities">
                <VerticalStackLayout>
                    <Border>
                        <StackLayout>
                            <Label Text="Capabilities" FontAttributes="Bold" TextDecorations="Underline"/>
                            <Label Text="{Binding HeartRate.Capabilities.Supported, StringFormat='Capabilities Supported: {0}'}"/>
                            <Label Text="{Binding HeartRate.Capabilities.Enabled, StringFormat='Capabilities Enabled: {0}'}"/>
                        </StackLayout>
                    </Border>

                    <Border>
                        <StackLayout>
                            <Label Text="Gym Mode" FontAttributes="Bold" TextDecorations="Underline"/>
                            <Grid ColumnDefinitions="Auto, Auto" ColumnSpacing="24">
                                <HorizontalStackLayout>
                                    <CheckBox IsChecked="{Binding EnableGymMode}" IsEnabled="{Binding IsGymModeSupported}"/>
                                    <Label Text="Enable Gym Mode" VerticalOptions="Center" IsEnabled="{Binding IsGymModeSupported}"/>
                                </HorizontalStackLayout>
                                <Button Grid.Column="1" Text="Set Gym Mode" Command="{Binding SetGymModeCommand}"/>
                            </Grid>
                        </StackLayout>
                    </Border>

                    <Border>
                        <StackLayout RadioButtonGroup.GroupName="SportMode" RadioButtonGroup.SelectedValue="{Binding ModeRequested}">
                            <Label Text="Sport Mode" FontAttributes="Bold" TextDecorations="Underline"/>
                            <Grid ColumnDefinitions="Auto, Auto" ColumnSpacing="24">
                                <StackLayout>
                                    <RadioButton Content="Generic" Value="{x:Static ant:SportMode.Generic}"/>
                                    <RadioButton Content="Running" Value="{x:Static ant:SportMode.Running}" IsEnabled="{Binding IsRunningSupported}"/>
                                    <RadioButton Content="Cycling" Value="{x:Static ant:SportMode.Cycling}" IsEnabled="{Binding IsCyclingSupported}"/>
                                    <RadioButton Content="Swimming" Value="{x:Static ant:SportMode.Swimming}" IsEnabled="{Binding IsSwimmingSupported}"/>
                                </StackLayout>
                                <Button Grid.Column="1" VerticalOptions="Center" Text="Set Sport Mode" Command="{Binding SetSportModeCommand}"/>
                            </Grid>
                        </StackLayout>
                    </Border>
                </VerticalStackLayout>
            </tabview:SfTabItem>
        </tabview:SfTabView.Items>
    </tabview:SfTabView>
</ContentView>
