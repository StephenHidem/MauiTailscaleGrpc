<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:ant="clr-namespace:SmallEarthTech.AntPlus.DeviceProfiles.FitnessEquipment;assembly=SmallEarthTech.AntPlus"
             x:DataType="ant:Treadmill"
             x:Class="AntPlusMauiClient.Views.TreadmillView">
    <VerticalStackLayout>
        <Label Text="Treadmill" Style="{StaticResource HeaderLabelStyle}"/>
        <StackLayout Margin="8, 0, 0, 0">
            <Label Text="{Binding Cadence, StringFormat='Cadence: {0}'}"/>
            <Label Text="{Binding NegVerticalDistance, StringFormat='NegVertical Distance: {0}'}"/>
            <Label Text="{Binding PosVerticalDistance, StringFormat='PosVertical Distance: {0}'}"/>
            <Label Text="{Binding Capabilities, StringFormat='Capabilities: {0}'}"/>
        </StackLayout>
    </VerticalStackLayout>
</ContentView>
